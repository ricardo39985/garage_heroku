
<div class= "row">
  <div class= "col s12 ">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <h1 class="card-title"><%=@car.year%> <%=@car.make%> <%=@car.model%></h1>
        <% if @car.color %>
        <p>
          <strong>Color: </strong><%=@car.color%><br>
        
        </p>
        <% end %>
        <% if @car.transmission %>
        <p>
           <strong>Transmission: </strong> <%=@car.transmission%> <br>
                         
        </p>
        <% end %>
        <% if @car.options %>
        <p>
           <strong>Options: </strong><%=@car.options%> <br><br>
                          
        
        </p>
        <% end %>
        <% if @car.specs %>
        <p>
           <strong>Specs: </strong><%=@car.specs%>     <br>                       
        </p>
        <% end %>
        <% if @car.mileage %>
        <p>
           <strong>Mileage:</strong> <%=@car.mileage%>    <br>                       
        </p>
        <% end %>
      </div>
      <div class= "card-action">
        <p><a class="" href=<%="/car/#{@car.id}/edit"%>><button class="btn-small waves-effect waves-light" type="submit" name="action">Edit
            <i class="material-icons right">send</i>
          </button></a></p>
        <form action=<%="/#{@car.id}/delete"%> method="POST">
          <input type="hidden" name="_method" value="delete">
          <button class="btn-small waves-effect waves-light red" type="submit" name="action">Delete
            <i class="material-icons right">send</i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
